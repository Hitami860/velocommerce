{% extends 'base.html.twig' %}

{% block title %}Bike Life-Nos produits
{% endblock %}

{% block body %}
	<body class="bg-gray-800">
		<img src="{{asset('images/logobikelife.png')}}" class="h-[150px] w-[200px] absolute ml-[20%]" alt="Logo bike life"/>
		<header class="flex flex-col bg-contain bg-no-repeat md:bg-no-repeat bg-cover py-96 container mx-auto gap-[60px] border-2" style="background-image:url('{{asset('images/bgproduits.jpg')}}')">
			<div class="text-white font-semibold gap-[3%] text-2xl pb flex justify-center">

				<a id="hover" href="{{path('app_main')}}">Accueil</a>
				<a id="hover" href="{{path('app_produits')}}">Tous nos produits</a>
				{% if app.user %}
				<a id="hover" href="{{path('app_logout')}}">Deconnexion</a>
				{% else %}
				<a id="hover" href="{{path('app_login')}}">Connexion</a>
				{% endif %}
				<a id="hover" href="{{path('app_contact')}}">Contact</a>

			</div>
			<div class="border border-solid border-2 bg-gray-600 opacity-[70%] w-[60%] py-4 ml-[18%]">
				<h1 class="text-white text-5xl text-center font-semibold ">Nos produits</h1>
			</div>
			<div class="text-white font-semibold gap-[3%] text-2xl pb flex justify-center">
				<a href="{{path('app_type')}}" class="absolute mt-[10%]">Les types de vélos</a>
			</div>
		</header>
		<section>
			<h2 class="text-3xl text-center pt-12 font-semibold text-white">Tous les produits ({{ produits | length }})</h2>
		</section>
		<div class="flex flex-wrap container mx-auto pt-6 gap-6 flex justify-center">
			{% for produit in produits %}
				<div class="w-1/4 bg-gray-800 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
					<a href="{{path('app_produit', {id: produit.id})}}">
						<div class="zoom-image"><img class="w-full h-[200px]" src="{{asset(produit.image)}}" alt=""/></div>
					</a>
					<div class="p-5">
						<a href="#">
							<h5 class="mb-2 text-2xl font-bold tracking-tight text-white dark:text-white">{{produit.nom}}</h5>
						</a>
						<p class="mb-3 font-normal text-gray-400 dark:text-gray-400">{{produit.description}}</p>
						<a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#54b3d6] rounded-lg hover:bg-[#0B9C9F] focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
							{{produit.prix}}€
							<svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 10">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
							</svg>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</body>
{% endblock %}
