{% extends 'base.html.twig' %}

{% block title %}Bike Life - Connexion
{% endblock %}

{% block body %}
	<body class="bg-gray-800 container mx-auto">
    <div class="pt-[20%] mb-[23%]">
    <h2 class="text-white text-2xl uppercase text-center">Connexion</h2>
		<form action="{{ path('app_login') }}" method="post" class="mt-5 flex flex-col">
			<input type="text" name="_username" value="{{lastpseudo}}" placeholder="Votre email" class="mb-5">
			<input type="password" name="_password" placeholder="Votre mot de passe" class="mb-5">
			<div class="flex justify-center">
				<button type="submit" class="w-[30%] text-white bg-[#54b3d6] rounded-xl">Connexion</button>
			</div>
		</form>
        <a href="{{ path('app_register') }}"><p class="text-white pt-7 text-xl text-center">Vous n'avez pas de compte ? <span style="color:red;">Inscrivez-vous</span></p></a>
        <a href="{{path('app_main')}}"><p class="text-white pt-7 text-xl text-center">Retour sur la page d'accueil</p></a>
        </div>

	</body>
{% endblock %}
